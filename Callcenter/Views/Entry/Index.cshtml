@model  Callcenter.Models.Entry
    @{
        ViewData["Title"] = "Callcenter";
    }

    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
    <div id="addspace">
        <form method="post" action="/">
            <div class="form-group">
                <label for="phone">Telefon:</label><br>
                <input class="form-control" type="text" id="phone" name="phone" value="@Model.phone"><br>
            </div>
            <div class="form-group">
                <label for="zip">Zip:</label><br>
                <input class="form-control" type="text" id="zip" name="zip" value="@Model.zip"><br>
            </div>
            <div class="form-group">
                <label for="requestText">Text:</label><br>
                <textarea class="form-control" id="requestText" name="requestText" rows="3">@Model.requestText</textarea>
            </div>
            <input type="submit" value="Submit">
        </form>
    </div>